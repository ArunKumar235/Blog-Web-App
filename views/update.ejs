<%- include("partials/header.ejs")  %>

<main>

    <div class="container">

        <form action="/view" method="POST" class="pb-4">

            <div class="mb-3">
                <label for="author" class="form-label">Name</label>
                <input type="text" class="form-control" name="author" id="author" placeholder="Your Name" value="<%= author %>">
            </div>
            
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" class="form-control" name="title" id="title" placeholder="Your Blog title" value="<%= title %>">
            </div>
            
            <div class="mb-3">
                <label for="content" class="form-label">The Blog</label>
                <textarea class="form-control" name="content" id="content" rows="10"><%= content %></textarea>

            </div>

            <button type="submit" class="btn btn-sm btn-primary">Submit</button>

        </form>

        <form action="/delete" method="POST" class="pb-4">
            <button type="submit" class="btn btn-sm btn-danger">Delete</button>

    </div>

</main>

<%- include("partials/footer.ejs") %>